<div class="card bg-light shadow-sm d-flex mt-3">
  <div class="card-header">
    <h1><%= @user.full_name %></h1>
  </div>
  <div class="card-body">
    <%= floating_form_with model: @user, url: edit_password_user_path do |form| %>
      <%= form.text_field :old_password, 'Old password', type: 'password', autofocus: true, required: true %>
      <%= form.text_field :password, 'New password', type: 'password', required: true %>
      <%= form.text_field :password_confirmation, 'New password confirmation', type: 'password' %>
      <button class="btn btn-outline-primary btn-lg m-2" type="submit">Save</button>
      <%= link_to 'Cancel', user_path(@user), class: "btn btn-outline-danger btn-lg m-2" %>
    <% end %>
  </div>
</div>