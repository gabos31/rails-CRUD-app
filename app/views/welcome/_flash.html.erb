<% if flash.any? %>
  <% flash.each do |type, text| %>
    <div class="alert alert-<%= "#{type}" %> alert-dismissible fade show m-3" role="alert">
      <%= text %>
      <button type="button" class="close" data-dismiss="alert">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
  <% end %>
<% end %>