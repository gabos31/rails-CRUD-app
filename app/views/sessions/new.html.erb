<div class="text-center">
  <h1>Sign Up</h1>
</div>
<%= floating_form_with scope: :session, url: session_path do |form| %>
  <%= form.text_field :email, 'Email address', autofocus: true, required: true %>
  <%= form.text_field :password, 'Password', type: 'password', required: true %>
  <button class="btn btn-outline-primary btn-lg btn-block" type="submit">Sign In</button>
<% end %>
